{
  "name": "@gapizza/prettier-config",
  "description": "Node-focused prettier config",
  "version": "1.0.0",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/gapizza/prettier-config/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@gapizza/commitlint-config": "^1.0.1",
    "commitizen": "^4.2.3",
    "commitlint": "^12.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "fixpack": "^4.0.0",
    "husky": "^6.0.0"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/gapizza/prettier-config#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "prettier"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "prettier": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gapizza/prettier-config.git"
  },
  "scripts": {
    "commit": "git-cz",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish",
    "postpublish": "git push",
    "prepare": "fixpack",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
